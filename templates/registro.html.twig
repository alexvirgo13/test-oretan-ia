{% extends 'base.html.twig' %}
{% block head %}
{% endblock %}
{% block title %}Registrarse - Oretan-IA{% endblock %}
{% block body %}
    <main>
        <header id="signup-header">
            <h1>Crear una cuenta</h1>
            <p>Regístrate para acceder a todas las funcionalidades de Oretan-IA</p>
        </header>
        <form action="{{ asset('php/registro.php') }}" method="post" id="signup-form">
            <label for="signup-fullname">Nombre Completo (Apellidos, Nombre)</label><br>
            <input type="text" id="signup-fullname" name="signup-fullname" pattern=".+,.+" required placeholder="Apellidos, Nombre"><br>

            <label for="signup-email">Correo electrónico</label><br>
            <input type="email" id="signup-email" name="signup-email" required placeholder="correo@mail.com"><br>

            <label for="signup-pswd">Contraseña</label><br>
            <input type="password" id="signup-pswd" name="signup-pswd" required><br>

            <label for="signup-confirm">Confirmar contraseña</label><br>
            <input type="password" id="signup-confirm" name="signup-confirm" required><br>

            <button type="submit" id="signup-submit">Entrar</button>
        </form>
        <section>
            <span>¿Ya tienes cuenta?</span> <a href="./login" class="sesion">Inicia sesión aquí</a>
        </section>
        <script src="{{ asset('script/signup-validator.js') }}"></script>
    </main>

{% endblock %}
